<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.murat.invio">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.murat.invio.core.InvioApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.murat.invio.ui.prelogin.PreLoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.murat.invio.ui.main.MainActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".ui.main.coin_detail.CoinDetailActivity" />
    </application>
</manifest>
